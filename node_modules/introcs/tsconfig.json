{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "graphics",
        "index.js",
        "index.d.ts",
        "console",
        "events",
        "docs",
        "list",
        "turtle"
    ]
}